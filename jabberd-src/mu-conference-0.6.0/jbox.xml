<!--  Jabber2 - mu-conference JBOX configuration  -->
<jbox project='mu-conference'>
  <build>
    <variables>
      <var name='CFLAGS'><value>-I ../jabberd/</value></var>
    </variables>
    <make>
      <macro name='HEADERS'>
        <file>../jabberd/jabberd.h</file>
      </macro>
      <macro name='OBJECTS'>
	<file>admin.o</file>
        <file>conference.o</file>
        <file>conference_room.o</file>
	<file>conference_user.o</file>
	<file>utils.o</file>
	<file>roles.o</file>
	<file>xdata.o</file>
	<file>xdb.o</file>
	<file>hash.o</file>
      </macro>
      <compile>
 	<objectfile macro='OBJECTS'>
	  <dep><macro>HEADERS</macro></dep>
        </objectfile>
        <sharedobject name='mu-conference.so' type='dynamic'>
          <dep filelist='1'>
            <macro>OBJECTS</macro>
          </dep>
        </sharedobject>
      </compile>
    </make>
  </build>
</jbox>
